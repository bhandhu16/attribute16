pipeline {
         agent any
                 stages ( 'one') {
                            steps  {
                                    echo 'hi, thus is bhandhavi'
                                    }
                                   }
                   stages ( 'two') {
                            steps  {
                                    input ('do you want to proceed?')
                                    }
                                   }
                     stages ( 'three') {
                                when {
                                        not {  
                                                 branch "master"
                                    }
                                }
                                steps {
                                        echo "hello"
}
}
                   stage('four') {
                                   parallel {
                                         stage('unit test') {
                                                            steps {
                                                                   echo "running the unit test..."
                                                                   }
                         }
                         stage ('integration test') {
                                             agent {
                                                   docker {
                                                          reuseNode false
                                                          image 'ubuntu'
                                                      }
                                             }
                                             steps {
                                                    echo 'Running the integration test ..'
                                                   }
                           }
                  }
}
}
}
}
